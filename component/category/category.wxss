/* component/category/category.wxss */

.contain {
    width: 100%;
}

.title {
    color: rgb(90, 83, 83);
    font-size: 32rpx;
    padding-left: 20rpx;
    font-weight: 800;
    height: 80rpx;
    line-height: 80rpx;
}

.flex {
    display: flex !important;
}

.f-wrap {
    flex-wrap: wrap!important;
}

.itemName {
    font-weight: 800;
    font-size: 32rpx;
}

.itemCont {
    color: rgb(160, 145, 145);
    font-size: 24rpx;
}

.wrap>view:nth-child(3n+1) {
    border-left: none;
}

.wrap>view:last-child {
    border-right: 1rpx solid #ccc;
}

.item {
    border: 1rpx solid #ccc;
    display: flex;
    justify-content: space-around;
    flex-direction: column;
    align-items: center;
    width: 33%;
    height: 100rpx;
    border-right: none;
}